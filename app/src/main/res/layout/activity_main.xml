<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image_bg"
    tools:context="com.saisreenivas.androidmediaplayer.moodscanner.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Mood Scanner"
        android:textColor="#00ff5d"
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/textTitle"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle"
        android:layout_centerHorizontal="true"
        android:text="@string/sub_title_text"
        android:textColor="#cde"
        android:id="@+id/sub_title"
        android:textAppearance="?android:textAppearanceSmall"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="304dp"
        android:layout_below="@id/sub_title"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:id="@+id/image_finger"
        android:background="@drawable/finger_bg" />
    <ImageView
        android:layout_width="200dp"
        android:id="@+id/thumbPrint"
        android:layout_height="304dp"
        android:layout_below="@id/sub_title"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="@drawable/thumb_finger_prints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_finger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Mood:"
        android:id="@+id/mood_text"
        android:textAppearance="?android:textAppearanceSmall"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mood_data"
        android:layout_below="@id/mood_text"
        android:layout_centerHorizontal="true"
        android:text="You are sad..."
        android:textColor="#cc000000"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"/>


</RelativeLayout>
